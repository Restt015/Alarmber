# Server Configuration
PORT=5000
WS_PORT=5001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/amber

# JWT Secret (MUST be at least 32 characters in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_change_in_production_minimum_32_chars
JWT_EXPIRE=7d

# Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# CORS Configuration (comma-separated list of allowed origins)
# For production, set your actual domain(s)
ALLOWED_ORIGINS=http://localhost:19000,http://localhost:19002
